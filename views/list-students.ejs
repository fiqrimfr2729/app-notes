<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Data Mahasiswa</h2>
            <a href="/student/add" class="btn btn-success mb-2">Tambah Data Mahasiswa</a>
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">NO</th>
                    <th scope="col">NIM</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% let i = 1 %> 
                  <% students.forEach(student => { %>
                    <tr>
                      <th scope="row"><%= i++ %> </th>
                      <td><%= student.nim %> </td>
                      <td><%= student.name %> </td>
                      <td>
                          <a href="/detail-student/<%= student.nim %> " class="btn badge rounded-pill btn-primary"></i>Detail</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>